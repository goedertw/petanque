generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Speler {
  spelerId           Int                 @id @default(autoincrement())
  voornaam           String
  naam               String
  actief             Boolean
  aanwezigheden      Aanwezigheid[]
  dagklassementen    Dagklassement[]
  algemeenklassement Algemeenklassement?
  spelverdelingen    Spelverdeling[]
}

model Aanwezigheid {
  aanwezigheidId Int      @id @default(autoincrement())
  datum          DateTime
  volgordeNummer Int
  speler         Speler   @relation(fields: [spelerId], references: [spelerId])
  spelerId       Int
}

model Spelverdeling {
  spelverdelingId Int    @id @default(autoincrement())
  speeldagId      Int
  spelcode        String
  terrein         String
  speler          Speler @relation(fields: [spelerId], references: [spelerId])
  spelerId        Int
}

model Dagklassement {
  dagklassementId Int      @id @default(autoincrement())
  datum           DateTime
  hoofdpunten     Int
  plus_min_punten Int
  speler          Speler   @relation(fields: [spelerId], references: [spelerId])
  spelerId        Int
}

model Algemeenklassement {
  algemeenklassementId Int    @id @default(autoincrement())
  hoofdpunten          Int
  plus_min_punten      Int
  speler               Speler @relation(fields: [spelerId], references: [spelerId])
  spelerId             Int    @unique
}
